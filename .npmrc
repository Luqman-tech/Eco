# Strict engine requirements
engine-strict=true

# Set default registry
registry=https://registry.npmjs.org/

# Always use exact versions
save-exact=true

# Disable package lock for more consistent builds
package-lock=false

# Increase network timeout
network-timeout=100000

# Disable package fund messages
fund=false

# Strict peer dependencies
strict-peer-deps=true

# Cache settings
cache-max=0
cache-min=10

# Log level
loglevel=error

# Prevent package-lock.json generation
package-lock=false

# Preferred Node.js version
engine-strict=true
node-version=18.18.0
npm-version=10.2.3

# Audit settings
audit=true
audit-level=high

# Progress bar settings
progress=true

# Ignore scripts during npm install (optional)
ignore-scripts=false

# Prefer offline mode
prefer-offline=true

# Disable update notifier
update-notifier=false

